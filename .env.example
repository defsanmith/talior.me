# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tailorme?schema=public"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379

# AI Provider Configuration
# Choose between "OPENAI" or "GEMINI" (default: OPENAI)
AI_PROVIDER="OPENAI"

# OpenAI Configuration
OPENAI_API_KEY="sk-..."
OPENAI_PARSE_MODEL="gpt-4o-mini"
OPENAI_REWRITE_MODEL="gpt-4o-mini"
OPENAI_SELECTION_MODEL="gpt-4o-mini"

# Google Gemini Configuration
GEMINI_API_KEY="..."
GEMINI_PARSE_MODEL="gemini-2.0-flash-exp"
GEMINI_REWRITE_MODEL="gemini-2.0-flash-exp"
GEMINI_SELECTION_MODEL="gemini-2.0-flash-exp"

# API
API_PORT=3001

# Worker
WORKER_CONCURRENCY=10

# OpenSearch (BM25 resume flow)
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX_BULLETS=bullets
